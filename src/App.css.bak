.App {
  text-align: center;
}
/*앱전체*/

.App-logo {
  height: 40vmin;
  pointer-events: none;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  .App-logo {
    animation: App-logo-spin infinite 20s linear;
  }
}

.App-link {
  color: #61dafb;
}
/*로고*/

.App-header {
  background-color: #fa5fe8; /*배경색*/
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: calc(10px + 2vmin);
  color: white;
}
/*헤더*/

.App-section {
	background-color: #f0fa5f;
	min-height: 40vh; /*높이*/
	display: flex; /*화면 꽉 채우기*/
}
/*섹션*/
