.App {
  min-height: 100%;
  min-width: 100%;
  background-color: #cd5c5c;
  
  height: auto;
  width: 100%;
  
  position: fixed;
  top: 0;
  left: 0; /*이 세개를 다 써야지 사이즈 적용*/
}
/*앱전체*/

.App-logo {
  height: 40vmin;
  pointer-events: none;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  .App-logo {
    animation: App-logo-spin infinite 20s linear;
  }
}

.App-link {
  color: #61dafb;
}
/*로고*/

.App-nav {
  min-height: 7%;
  min-width: 100%;
  
  height: 7%;
  width: 100%;
  
  top: 0;

	background-color:#d981ff;
	position: fixed; /*스크롤 움직여도 계속 고정*/
}

.App-nav ul li { /*이걸 적용과 동시에 세로로 놓이던 것들이 자동으로 가로로 설정됨*/	
  list-style: none; /*li태그들을 나타내는 점들이 없어짐*/
	background-color: #d981ff; 
	float: left; /*이름이 길면 옆으로 흐르게 함*/
	text-align: center; /*글씨 정렬*/
	color: white;
	float: right; /*메뉴 오른쪽 정렬*/
	top: 0;
}

.App-nav-menu {
	text-decoration: none; /*태그 아래 링크 밑줄 없앰*/
	display: block; /*글씨뿐만 아니라 그 근처 눌러도 링크 걸리게 하기*/
	font-size: 1vw; /*font-weight:폰트 굵기 적용*/
	color: white;
	background-color: #d981ff; 
	font-family: 'Tomorrow', sans-serif;
	width: 140px; /*이걸 해야지 겹쳐있던 메뉴가 옆으로 흩어진다*/
	top: 0;
}

.App-nav .App-nav-menu:hover { /*커서 올라왔을 때*/
	color: grey;
}
/*네비게이션*/

.App-section-home {
	background-color: #ffffff;
	background-image: url(./main.jpg);
	background-position: center; /*사진 정렬*/
	background-repeat: no-repeat; /*노바둑판정렬*/
	background-size: cover; /*높이100%*/
	
	min-height: 93%;
  min-width: 100%;
  
  height: auto;
  width: 100%; 
  
  position: fixed;
 	top: 7%;
  
  font-family: 'Tomorrow', sans-serif;
  color: white;
  text-align: center; /*글자 정렬*/
  font-size: 4vw;
  line-height: 60%; /*줄 간격*/
  font-size-adjust: 0.58;
}

.App-section-home-shadow {
	background-color: rgba(0,0,0,0.5);
	position: absolute; /*겹치게하기*/
	
	min-height: 93%;
  min-width: 100%;
  
  height: auto;
  width: 100%;  
  
  position: fixed;
 	top: 7%;
}

.App-section-home h1,h2 {
	position: relative;
	z-index: 1000; /*글자 맨 앞으로 나오게 출력*/
}

.App-section-others {
	background-color: #ffffff;
	
	min-height: 93%;
  min-width: 100%;
  
  height: auto;
  width: 100%; 
  
  position: fixed;
 	top: 7%;
}
/*섹션*/

.Ani-fadein {
  animation:fadeIn 1s linear;
}

@keyframes fadeIn {
  0% {
    opacity:0
  }
  100% {
    opacity:2;
  }
}

.Ani-fadein.none {
  display:none
}
/*페이드인*/